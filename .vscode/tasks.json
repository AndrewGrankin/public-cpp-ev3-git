{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "label": "Push dir to build",
            "type": "shell",
            "command": "pushd ${workspaceFolder}/build",
            "group": 
            {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build file",
            "type": "shell",
            "command": "build_${fileBasenameNoExtension}.sh",
            "group": 
            {
                "kind": "build",
                "isDefault": true
            }
        }
